<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <div class="container p-4">
      <h1>URL Shrinker</h1>
      <form action="/shortUrls" method="POST" class="my-4 flex">
        <label for="fullUrl" class="visually-hidden-focusable">Url</label>
        <input
          type="url"
          placeholder="URL"
          name="fullUrl"
          id="fullUrl"
          class="form-control mr-2 col"
        />
        <button type="submit" class="btn btn-success mt-2">Shrink</button>
      </form>
      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th>Full URL</th>
            <th>Short URL</th>
            <th>Clicks</th>
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>

          <tr>
            <td>
              <a href="<%= shortUrl.full %>" target="_blank"
                ><%= shortUrl.full %></a
              >
            </td>
            <td>
              <a href="<%= shortUrl.short%>" target="_blank"
                ><%= shortUrl.short%></a
              >
            </td>
            <td><%= shortUrl.clicks%></td>
          </tr>
          <% })%>
        </tbody>
      </table>
    </div>
  </body>
</html>
